# Configuraci칩n del servidor
NODE_ENV=development
PORT=3000
API_URL=http://localhost:3000

# CORS - Or칤genes permitidos (separados por comas)
# Para desarrollo: incluye puertos comunes de frameworks frontend
CORS_ORIGINS_DEV=http://localhost:4200,http://localhost:3000,http://localhost:5173,http://localhost:8080,https://hoppscotch.io
# Para producci칩n: solo dominios espec칤ficos y seguros
CORS_ORIGINS_PROD=https://yourdomain.com,https://www.yourdomain.com,https://admin.yourdomain.com

# Base de datos - Variables separadas
# DATABASE_URL se construye autom치ticamente a partir de estas variables
DBNAMES=cedex
DB_USER=root
DB_PASSWORD=
DB_HOST=localhost
DB_PORT=3306

# DATABASE_URL para Prisma (se construye autom치ticamente)
DATABASE_URL=mysql://root@localhost:3306/cedex

# 游댠 CONFIGURACIONES ESPEC칈FICAS DEL POOL DE CONEXIONES
# Estas configuraciones se aplicar치n autom치ticamente seg칰n el entorno:

# PRODUCCI칍N (cuando NODE_ENV=production):
# - connection_limit=20    (20 conexiones m치ximas)
# - pool_timeout=20        (20 segundos timeout)
# - connect_timeout=60     (60 segundos para conectar)

# DESARROLLO (cuando NODE_ENV=development):
# - connection_limit=5     (5 conexiones m치ximas)
# - pool_timeout=30        (30 segundos timeout)
# - connect_timeout=60     (60 segundos para conectar)

# TEST (cuando NODE_ENV=test):
# - connection_limit=2     (2 conexiones m치ximas)
# - pool_timeout=10        (10 segundos timeout)
# - connect_timeout=30     (30 segundos para conectar)

# MONITOREO DEL POOL
# Habilitar monitoreo continuo del pool (true/false)
ENABLE_POOL_MONITORING=true
# Intervalo de monitoreo en milisegundos
POOL_MONITORING_INTERVAL=30000

# JWT
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRES_IN=7d

# Bcrypt
BCRYPT_ROUNDS=12

# Archivos
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_IMAGES=jpg,jpeg,png,gif,webp
ALLOWED_DOCUMENTS=pdf,doc,docx

# Correos
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
FROM_EMAIL=noreply@yourdomain.com
FROM_NAME=Tu Ecommerce

# Pagos
STRIPE_PUBLIC_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_secret
WEBHOOK_SECRET=your_webhook_secret

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log
